<Page x:Class="TNS__provider_.Pages.Abonents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TNS__provider_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="650"
      Title="Abonents">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <DataGrid >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ФИО"/>
                    <DataGridTextColumn Header="Номер"/>
                    <DataGridTextColumn Header="ЛС"/>
                    <DataGridTextColumn Header="Услуги"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Активные"/>
                <RadioButton Content="Неактивные"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Text="События" Style="{StaticResource Text}" HorizontalAlignment="Center" />
            <ListView ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        </StackPanel>
    </Grid>
</Page>
